@model UpdateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">


                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">araç Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Araç İle İlgili Temel Bilgileri Eksiksiz Doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="CarId" />
                                <label for="exampleInputBrand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Kapak Fotografı</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Kapak Fotografı Linkini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Vites Türü</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türü Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısını Seçiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısını Seçiniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt Türü</label>
                                <input type="number" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türü Girişi Yapınız">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputBigImageUrl">Büyük Kapak Fotografı</label>
                                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Araç Detayında Gözükecek Kapak Fotograf Linki">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->


            </div>
        </div>


    </div>

</div>
<!-- end page title -->
